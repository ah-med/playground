{
    "manifest_version": 3,
    "name": "Page Word Counter",
    "version": "1.0",
    "description": "Counts words and characters on any webpage",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content/content.js"]
      }
    ]
  }
  